html 
    head
        title #{user.name}'s profile
        link(rel="stylesheet", href="/users/profile.css")
        link(rel="stylesheet", href="/users/profileTab.css")
        script(src="/users/profile.js") 
    body(onload=`init()`)
        include ../../partials/header.pug
        h2 #{user.name}'s profile
        // Tab links
        .tab
            button.tablinks(onclick="showData(event, 'likes')") Likes
            button.tablinks(onclick="showData(event, 'reviews')") Reviews
        // Tab content
        #likes.tabcontent
            ul
                if user.likes.length > 0
                    for like in user.likes
                        li #[a(href=`/games/${like._id}`) #{like.name}] #[img.like.hide(src="/heart-svgrepo-com.svg", alt="liked", width="15", height="15", onclick=(`removeLike('${like._id}')`))]
                else 
                    p No likes
        #reviews.tabcontent
            ul
                if user.reviews.length > 0
                    for review in user.reviews  
                        li #[a(href=`/games/${review.game}`)] #{review.gameName}
                        br
                        p #{review.text}
                else 
                    p No reviews